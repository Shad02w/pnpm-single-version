{
    "name": "pnpm-single-version",
    "version": "1.4.0",
    "description": "Ensure single version dependencies of pnpm workspace",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "bin": {
        "pnpm-single-version": "./dist/command/index.js",
        "psv": "./dist/command/index.js"
    },
    "scripts": {
        "run-script": "TS_NODE_PROJECT=./config/tsconfig.script.json node -r ts-node/register",
        "build": "pnpm run --silent run-script ./script/build.ts",
        "prepublishOnly": "pnpm run --silent run-script ./script/build.ts",
        "release": "standard-version",
        "test": "jest -c ./config/jest.config.ts"
    },
    "keywords": [
        "pnpm",
        "dependencies",
        "single version",
        "one version",
        "pnpmfile",
        "package",
        "packages",
        "workspace",
        "workspaces",
        "monorepo"
    ],
    "author": "Alvis Tse",
    "license": "ISC",
    "dependencies": {
        "@pnpm/find-workspace-dir": "6.0.0",
        "@pnpm/lockfile-file": "8.0.0",
        "@pnpm/lockfile-utils": "6.0.0",
        "@pnpm/logger": "5.0.0",
        "bole": "*",
        "chalk": "4.1.2",
        "commander": "10.0.0",
        "find-up": "6.3.0",
        "fs-extra": "11.1.1",
        "is-ci": "^3.0.1",
        "minimatch": "8.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "17.5.1",
        "@commitlint/config-conventional": "17.4.4",
        "@jest/types": "29.5.0",
        "@swc/cli": "0.1.62",
        "@swc/core": "1.3.44",
        "@types/fs-extra": "11.0.1",
        "@types/is-ci": "^3.0.0",
        "@types/jest": "29.5.0",
        "@types/minimatch": "5.1.2",
        "@types/node": "18.15.11",
        "commitizen": "4.3.0",
        "cz-conventional-changelog": "3.3.0",
        "esbuild": "0.17.15",
        "husky": "8.0.3",
        "jest": "29.5.0",
        "prettier": "2.8.7",
        "standard-version": "9.5.0",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.0.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
