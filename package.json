{
    "name": "pnpm-single-version",
    "version": "1.3.4",
    "description": "Ensure single version dependencies of pnpm workspace",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "bin": {
        "pnpm-single-version": "./dist/command/index.js",
        "psv": "./dist/command/index.js"
    },
    "scripts": {
        "run-script": "TS_NODE_PROJECT=./config/tsconfig.script.json node -r ts-node/register",
        "build": "pnpm run --silent run-script ./script/build.ts",
        "prepublish": "pnpm run --silent run-script ./script/build.ts",
        "fig": "NODE_ENV=development node ./dist/command/index.js generate-fig-spec",
        "release": "standard-version",
        "test": "jest -c ./config/jest.config.ts",
        "postinstall": "psv install"
    },
    "keywords": [
        "pnpm",
        "dependencies",
        "single version",
        "one version",
        "pnpmfile",
        "package",
        "packages",
        "workspace",
        "workspaces",
        "monorepo"
    ],
    "author": "Alvis Tse",
    "license": "ISC",
    "dependencies": {
        "@pnpm/find-workspace-dir": "4.0.2",
        "@pnpm/lockfile-file": "5.3.3",
        "@pnpm/lockfile-utils": "4.2.4",
        "@pnpm/logger": "4.0.0",
        "bole": "4.0.0",
        "chalk": "4.1.2",
        "commander": "9.4.0",
        "find-up": "5.0.0",
        "fs-extra": "10.1.0",
        "minimatch": "5.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.1.2",
        "@commitlint/config-conventional": "17.1.0",
        "@fig/complete-commander": "2.0.0",
        "@jest/types": "28.1.3",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.2.244",
        "@types/fs-extra": "9.0.13",
        "@types/jest": "28.1.3",
        "@types/minimatch": "5.1.1",
        "@types/node": "18.7.14",
        "commitizen": "4.2.5",
        "cz-conventional-changelog": "3.3.0",
        "esbuild": "0.15.6",
        "husky": "8.0.1",
        "jest": "28.1.3",
        "pnpm-single-version": "1.3.5-beta.5",
        "prettier": "2.7.1",
        "standard-version": "9.5.0",
        "ts-jest": "28.0.8",
        "ts-node": "10.9.1",
        "typescript": "4.8.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
