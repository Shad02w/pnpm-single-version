{
    "name": "pnpm-single-version",
    "version": "1.2.8-beta6",
    "description": "Ensure single version dependencies of pnpm workspace",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "bin": {
        "pnpm-single-version": "./dist/command/index.js",
        "psv": "./dist/command/index.js"
    },
    "scripts": {
        "run-script": "TS_NODE_PROJECT=./config/tsconfig.script.json node -r ts-node/register",
        "build": "pnpm run --silent run-script ./script/build.ts",
        "prepublish": "pnpm run --silent run-script ./script/build.ts",
        "release": "standard-version",
        "test": "jest -c ./config/jest.config.ts"
    },
    "keywords": [
        "pnpm",
        "single version",
        "one version",
        "pnpmfile",
        "package",
        "packages",
        "workspace",
        "workspaces",
        "monorepo"
    ],
    "author": "Alvis Tse",
    "license": "ISC",
    "dependencies": {
        "@fig/complete-commander": "2.0.0",
        "@pnpm/find-workspace-dir": "4.0.2",
        "@pnpm/lockfile-file": "5.1.2",
        "@pnpm/lockfile-utils": "4.0.7",
        "@pnpm/logger": "4.0.0",
        "bole": "4.0.0",
        "chalk": "4.1.2",
        "commander": "^9.4.0",
        "find-up": "5.0.0",
        "fs-extra": "10.1.0",
        "minimatch": "5.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.0.3",
        "@commitlint/config-conventional": "17.0.3",
        "@jest/types": "28.1.1",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.2.211",
        "@types/fs-extra": "9.0.13",
        "@types/jest": "28.1.4",
        "@types/minimatch": "3.0.5",
        "@types/node": "18.0.3",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "esbuild": "0.15.5",
        "husky": "^8.0.0",
        "jest": "28.1.2",
        "prettier": "2.7.1",
        "standard-version": "9.5.0",
        "ts-jest": "28.0.5",
        "ts-node": "10.8.2",
        "typescript": "4.7.4"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
